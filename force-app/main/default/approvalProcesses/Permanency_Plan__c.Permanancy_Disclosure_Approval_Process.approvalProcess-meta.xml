<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>allInternalUsers</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Event_Description__c</field>
        <field>Owner</field>
        <field>Primary_Guardian_Relationship__c</field>
        <field>Secondary_Guardian_Relationship__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Supervisor_Approval__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Gurdianship Application Review</label>
        <name>Gurdianship_Application_Review</name>
    </approvalStep>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Permanency_Plan__c.Permanency_Plan_Status__c</field>
            <operation>equals</operation>
            <value>Approved</value>
        </criteriaItems>
        <criteriaItems>
            <field>Permanency_Plan__c.Guardianship_Planing__c</field>
            <operation>equals</operation>
            <value>2</value>
        </criteriaItems>
        <criteriaItems>
            <field>Permanency_Plan__c.Primary_Permanency_Plan__c</field>
            <operation>equals</operation>
            <value>Guardianship by a non-relative,Guardianship by a relative</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Update_event_empty_disclosure</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Guardian_into_Agreement</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Status_into_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>update_event_empty_disclosure_reject</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_status_into_Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>update_event_value_disclosure</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Status_into_Submitted_for_Approva</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Permanancy Disclosure Approval Process</label>
    <processOrder>4</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
