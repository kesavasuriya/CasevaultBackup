<aura:component implements="flexipage:availableForRecordHome,force:hasRecordId" access="global" >
    
    <aura:attribute name="activeTab" type="String" default="one"/>
    <aura:attribute name="isLoading" type="Boolean" default="false"/>
	<aura:attribute name="Intake_Investigation_ServiceCase" type="String"/>
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>

    <aura:if isTrue="{!v.isLoading}">
        <lightning:spinner alternativeText="Loading" size="small"/>
    </aura:if>

    <lightning:tabset selectedTabId="{!v.activeTab}" onselect="{!c.tabSelected}">
        <lightning:tab label="Maltreatment Type" id="one" >
        </lightning:tab>
        <lightning:tab label="Recommendation and Overrides" id="two">
        </lightning:tab>
        <lightning:tab label="CPS Response Type" id="three">
        </lightning:tab>
    </lightning:tabset>

    <aura:if isTrue="{!v.activeTab == 'one'}">
        <lightning:flow aura:id="flowData"/>
        <lightning:flow aura:id="sdmAllegedVictimMaltreator2"/>
        <lightning:flow aura:id="sdmCreateFlow" onstatuschange="{!c.statusChange1}"/>
    </aura:if>

    <aura:if isTrue="{!v.activeTab == 'two'}">
        <lightning:flow aura:id="SDMRecommendationandOverrides" onstatuschange="{!c.statusChange2}"/>
    </aura:if>


    <aura:if isTrue="{!v.activeTab == 'three'}">
        <c:SDMRecordView recordId="{!v.recordId}"/>
    </aura:if>

	
</aura:component>