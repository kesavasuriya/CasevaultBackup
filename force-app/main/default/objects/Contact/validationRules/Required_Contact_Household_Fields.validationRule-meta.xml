<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Required_Contact_Household_Fields</fullName>
    <active>false</active>
    <errorConditionFormula>AND( HEAD_OF_HOUSEHOLD__c = TRUE,  OR(ISBLANK(TEXT(Danger_to_self__c)), ISBLANK(TEXT(Danger_to_worker__c)), ISBLANK(TEXT(Appearance_of_mentally_impaired__c)), ISBLANK(TEXT(Signs_of_mental_illness__c))))</errorConditionFormula>
